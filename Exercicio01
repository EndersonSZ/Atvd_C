#include <stdio.h>

int main()
{
    int idade, meses, anos, dias;
    printf("informe sua idade:");
    scanf("%d",&idade);
    printf("informe o mes:");
    scanf("%d",&meses);
    printf("informe os dias:");
    scanf("%d",&dias);
    
    idade = (anos * 365)+ (meses *30)+dias;
    
    printf("a idade em dias Ã©:%d",idade);

    return 0;
}
